    {
      "name": "Accounts",
      "item": [
        {
          "name": "POST - Create Account A",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user1\",\n  \"accountType\": \"savings\",\n  \"currency\": \"INR\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["accounts"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "pm.environment.set(\"accountA\", res.id);",
                  "pm.test(\"Saved Account A ID\", () => pm.expect(res.id).to.exist );"
                ]
              }
            }
          ]
        },
        {
          "name": "POST - Create Account B",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user2\",\n  \"accountType\": \"current\",\n  \"currency\": \"INR\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["accounts"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "pm.environment.set(\"accountB\", res.id);",
                  "pm.test(\"Saved Account B ID\", () => pm.expect(res.id).to.exist );"
                ]
              }
            }
          ]
        },
        {
          "name": "GET - Get Account A (with Balance)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/accounts/{{accountA}}",
              "host": ["{{baseUrl}}"],
              "path": ["accounts", "{{accountA}}"]
            }
          }
        },
        {
          "name": "GET - Get Ledger for Account A",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/accounts/{{accountA}}/ledger",
              "host": ["{{baseUrl}}"],
              "path": ["accounts", "{{accountA}}", "ledger"]
            }
          }
        }
      ]
